<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="phone"
            type="by.grodno.vasili.bindingmvvm.model.Phone"
            />

        <variable
            name="handler"
            type="by.grodno.vasili.bindingmvvm.main.MainActivity"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{phone.brand}"
            tools:text="Samsung"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(phone.year)}"
            tools:text="2016"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{phone.model}"
            tools:text="S7"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:onClick="@{(view) -> handler.details(view, phone.id)}"
            />

    </LinearLayout>

</layout>
